<p id="notice"><%= notice %></p>

<h1>Carreras</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carreras.each do |carrera| %>
      <tr>
        <td><%= carrera.nombre %></td>
        <td><%= link_to 'Mostrar', carrera %></td>
        <td><%= link_to 'Editar', edit_carrera_path(carrera) %></td>
        <td><%= link_to 'Borrar', carrera, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Carrera', new_carrera_path %>
